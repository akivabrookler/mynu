import "react";
import "./search_Bar.css";
import TextField from "@mui/material/TextField";

const onSearch = (searchVal) => {
    setValue(searchVal);
    //HERE INSERT FUNCTION TO MAKE SEARCHVAL SHOW UP --> probably in the filters 
    //console.log(searchVal);
};

const onChange = (event) => {
    setValue(event.target.value);

};

return([
    <><h2>"Search for a meal!"</h2><div className="search-box">
    <input type="text" value={value} onChange={onChange}></input>
      <button onClick={() => onSearch(value)}>Search</button>
    </div><div className="autofill"
      {...data
        .filter((item) => {
          const searchVal = value.toLowerCase();
          const mealName = item.mealName.toLowerCase();
          return (
            searchVal &&
            mealName.startsWith(searchVal) &&
            mealName !== searchVal
          );
        })
        .slice(0, 5)
        .map((item) => (
          <div onClick={() => onSearch(item.mealName)} className="search-row" key={item.mealName}>
            {item.mealName}</div>))} /></>])